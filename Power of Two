#POWER OF TWO
import math
class Solution:
    def isPowerOfTwo(self, n: int) -> bool:
        if n < 1:
            return False
        while n % 2 == 0:
            n //= 2
        return n == 1


#POWER OF THREE
class Solution:
    def isPowerOfThree(self, n: int) -> bool:
        if n==0:
            return False
        while (n % 3 == 0):
            n//=3
        return n == 1


#POWER OF FOUR
class Solution:
    def isPowerOfFour(self, n: int) -> bool:
        if n == 0:
            return False
        else:
            while n % 4 == 0:
                n//=4
        return n == 1
